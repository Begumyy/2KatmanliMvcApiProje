@model IEnumerable<mvccrud.Models.mvcfirmamodel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni", "EY", null, new { @class = "btn btn-danger" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirmaAd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bakiye)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sektor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirmaAd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bakiye)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sektor)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "EY", new { id = item.FirmaNo }, new { @class = "btn btn-success" }) |

            @Html.ActionLink("Sil", "Sil", new { id = item.FirmaNo }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
